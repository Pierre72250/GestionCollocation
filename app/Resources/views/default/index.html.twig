{% extends 'base.html.twig' %}

{% block headerBackground %}
    <div class="header header-filter" style="background-image: url('{{ asset('Resources/assets/img/header-background.jpg') }}');">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="brand">
                        <h1>Gestion des colocations</h1>
                        <h3>Projet Symfony - L3 MIAGE - Universit√© de Nantes</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <h2 class="text-center">Rechercher dans nos annonces.</h2>

    <form class="form-horizontal" action="{{ path('searchLocation') }}" method="post" enctype="multipart/form-data">
        <div class="col-sm-5">
            <div class="input-group text-center">
                <span class="input-group-addon">
                    <i class="material-icons" style="margin-right: 20px; font-size: 30px;">location_on</i>
                </span>
                <input type="text" name="ville" class="form-control" placeholder="{{"locVille"|trans}}">
            </div>
        </div>
        <div class="col-sm-5">
            <div class="input-group text-center">
                <span class="input-group-addon">
                    <i class="material-icons" style="margin-right: 20px; font-size: 30px;">euro_symbol</i>
                </span>
                <input type="text" name="loyer_cc_m" class="form-control" placeholder="{{"locLoyerCcM"|trans}}">
            </div>
        </div>
        <div class="col-sm-2">
            <input type="submit" class="btn btn-primary" value="Go" style="width: 100%;">
        </div>
    </form>

{% endblock %}
